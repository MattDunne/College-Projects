<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#99CC5E"
    tools:context="com.example.matt.csp_project.Button_MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00a2dc"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                app:srcCompat="@drawable/cspslogan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:backgroundTint="#99CC5E"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/programsBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/programsgreen" />

            <ImageButton
                android:id="@+id/calendarBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/calandargreen" />

            <ImageButton
                android:id="@+id/metrobusBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/metrobusgreen" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/scheduleBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/schedulegreen" />

            <ImageButton
                android:id="@+id/newsBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/newsgreen" />

            <ImageButton
                android:id="@+id/contactsBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/contactsgreen" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/infoBtn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/infogreen" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
